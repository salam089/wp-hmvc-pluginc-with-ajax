        <div class="row test " ng-controller="loginValidationCtrl">            <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5">            <div class="list-group">                <a class="list-group-item list-group-item-danger" href="#" ng-show="loginError" ng-bind-html="errorMsg"> {{errorMsg }} </a>                <a class="list-group-item list-group-item-danger" href="#" ng-show="loginSuccess"> {{successMsg }} </a>            </div>            <form class="form-login"  name="Form" id="form1" novalidate ng-submit="form.submit(Form)">                    <h4 class="log-box-title">                       Login to your account                    </h4>                <div class="form-group" ng-class="{'has-error':Form.email.$dirty && Form.email.$invalid, 'has-success':Form.email.$valid}">                    <label> E-mail </label>                    <span class="input-icon">                        <input type="email" placeholder="example@domain.com" class="form-control" name="email" ng-model="myModel.email" required style="color: #9c9ca0;" >                        <i class="ti-email"></i>                    </span>                    <span class="error text-small block" ng-if="Form.email.$dirty && Form.email.$error.required">Email is required.</span>                    <span class="error text-small block" ng-if="Form.email.$error.email">Please, enter a valid email address.</span>                    <span class="success text-small" ng-if="Form.email.$valid">It's a valid e-mail!</span>                </div>                <div id="password_portion" class="form-group" ng-class="{'has-error':Form.password.$dirty && Form.password.$invalid, 'has-success':Form.password.$valid}">                    <label> Password </label>                     <span class="input-icon">                        <input type="password" placeholder="Enter password" class="form-control" name="password" ng-model="myModel.password" required  style="color: #9c9ca0;" >                        <i class="ti-key "></i>                      </span>                        <span class="error text-small block" ng-if="Form.password.$dirty && Form.password.$error.required">Password is required.</span>                        <span class="success text-small block" ng-if="Form.password.$valid">Ok!</span>                </div>                <div class="text-center">                    <a ui-sref="login.resetpass"> Forgot password?</a>                </div>                <div class="checkbox clip-check check-primary">                    <input type="checkbox" name="remember" id="remember" value="1">                    <label for="remember"> Keep me signed in </label>                </div>                <div class="form-actions">                    <button type="submit"  class="btn btn-dark-azure btn-block" >                        <span><i class="ti-lock"></i>Login</span>                    </button>                </div>                         <div class="new-account text-center">                    Don't have an account yet?                    <a ui-sref="login.registration"> Create one now </a>                </div>            </form>            <!-- start: COPYRIGHT -->            <!-- end: COPYRIGHT -->        </div>        <!-- end: LOGIN BOX -->    </div></div>